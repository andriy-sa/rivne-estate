{% extends "admin/app.twig" %}

{% block content %}

    {% if errors %}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ errors | raw }}
        </div>
    {% endif %}
    <div id="create-rieltor">
        <form method="post" enctype="multipart/form-data" action="/admin/rieltors/insert">
            <div class="form-group">
                <label for="">ПІП</label>
                <input type="text" name="name" class="form-control" value="{{ set_value('name') }}">
            </div>
            <div class="form-group">
                <label for="">Телефон</label>
                <textarea name="phone"  class="form-control" rows="6">{{ set_value('phone') }}</textarea>
            </div>
            <div class="form-group">
                <label for="">Фото</label>
                <input type="file" name="image"  class="form-control">
            </div>
            <input type="submit" value="Додати" class="btn btn-success">
        </form>
    </div>

{% endblock %}